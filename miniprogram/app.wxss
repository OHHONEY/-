.page_container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #FFFFFF;
}

/* 页面只有一页 不可滚动 */
.single-page {
  height: 100vh;
}

text, view {
  color: #505050;
  font-size: 28rpx;
}

view {
  box-sizing: border-box;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}

/* button 默认box-sizing: border-box; */
button {
  padding: 0;
  background: initial;
}

/* 导航hover状态 */
.navigator-hover {
  background-color: rgba(0, 0, 0, 0);
  opacity: 1;
}

input {
  width: 320rpx;
  height: 58rpx;
  line-height: 58rpx;
  padding: 0 10rpx 0;
  border-radius: 4rpx;
  border: .5px solid #999999;
}

.input-placeholder {
  font-size: 24rpx;
  color: #6B6B6B;
}
