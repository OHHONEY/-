.page_my-life {
  background: #FEE1C6;
}

.page_container {
  align-items: stretch;
}

.page_container > view {
  border-radius: 8rpx;
  background: #FFFFFF;
}

.page_container .data-overview {
  display: flex;
  flex-direction: column;
  /* background: #F8F9FE; */
  padding: 10rpx 30rpx;
  margin: 20rpx 30rpx;
  border-radius: 8rpx;
}

.data-overview text:first-of-type {
  font-size: 28rpx;
}

.data-overview text:last-of-type {
  font-size: 44rpx;
  font-weight: bold;
  margin: 6rpx 0 0;
  transform: translateX(-4rpx);
}

.data-overview-monthly-balance {
  padding: 20rpx 30rpx;
  margin: 0 30rpx 20rpx;
  border-radius: 8rpx;
}

.data-overview-monthly-balance input {
  display: inline-block;
  margin: 0 20rpx 0 0;
  vertical-align: middle;
}

.data-overview-monthly-balance > navigator {
  color: #D29060;
  display: inline-flex;
  align-items: center;
  vertical-align: middle;
}

.data-overview-monthly-balance > navigator image {
  width: 56rpx;
  height: 56rpx;
  margin: 0 6rpx 0 0;
}

.base_progress {
  height: 16rpx;
  border-radius: 32rpx;
  width: 580rpx;
  background: #FEE1C6;
  margin: 20rpx 0;
}

.base_progress view{
  width: 0;
  height: 100%;
  border-radius: 32rpx;
  background: #707476;
}

.monthly-assessment, .daily-assessment, .daily-warning {
  margin: 0 30rpx 20rpx;
  padding: 0 30rpx; 
  line-height: 96rpx;
}

.daily-assessment, .daily-warning {
  display: flex;
  align-items: center;
}

.daily-warning image, .daily-assessment image {
  width: 42rpx;
  height: 42rpx;
  margin: 0 6rpx 0 0;
}

.asset-overview {
  padding: 20rpx 30rpx;
  margin: 0 30rpx 20rpx;
  background: #FFFFFF;
  border-radius: 8rpx; 
}

.asset-overview > text {
  margin: 0 24rpx 0 0
}

.asset-overview > text:last-of-type {
  display: block;
  margin: 12rpx 0 40rpx 30rpx;
}

.histogram {
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  padding: 0 20rpx;
}

.histogram > view {
  flex-grow: 1;
  background: #FEE1C6;
  margin: 0 32rpx;
  height: 100rpx;
}

.histogram > view:nth-of-type(1) {
  margin: 0 32rpx 0 0;
}