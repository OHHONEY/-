.circle-outer {
  width: 360rpx;
  height: 360rpx;
  margin: 0 auto;
  border-radius: 50%;
  background: #BA5375;
  display: flex;
  align-items: center;
  justify-content: center;
}

.circle-inner {
  width: 55%;
  height: 55%;
  border-radius: 50%;
  background: #FFFFFF;
}

.items {
  background: #F7F5F6;
  margin: 40rpx 4rpx;
  padding: 32rpx 40rpx; 
  border-radius: 32rpx;
}

.choose-item {
  display: flex;
  align-items: center;
}

.choose-item image {
  width: 64rpx;
  height: 64rpx;
  margin: 0 80rpx 0 0;
  padding: 20rpx;
  border-radius: 100%;
  background: #FFFFFF;
}

.choose-item input {
  margin: 0 0 20rpx;
}
