.page-root {
  background: #F3BB47;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 0 10vw;
}

.category-img {
  height: 260px;
}

text {
  display: flex;
  padding: 0 64rpx;
  color: #FFFFFF;
  font-size: 64rpx;
  text-align: center;
}

input {
  font-size: 40rpx;
  background: #FFFFFF;
  border: none;
  color: #B3B3B3;
  line-height: 112rpx;
  height: 112rpx;
  width: 100%;
  border-radius: 38rpx;
  padding: 0 36rpx;
  margin: 80rpx 0 80rpx;
  box-sizing: border-box;
}

.operation-block {
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-self: stretch;
}

.operation-block text {
  font-size: 32rpx;
  padding: 0;
}

